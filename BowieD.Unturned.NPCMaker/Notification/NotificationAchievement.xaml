<UserControl x:Class="BowieD.Unturned.NPCMaker.Notification.NotificationAchievement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.Notification"
             xmlns:xamle="clr-namespace:BowieD.Unturned.NPCMaker.XAML"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300">
    <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Name="mainBorder">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label>
                <TextBlock FontSize="20" Text="{xamle:Localize Achievements_notificationTitle}"/>
            </Label>
            <Label Grid.Row="1" FontSize="18">
                <TextBlock Name="title"/>
            </Label>
            <Label Grid.Row="2">
                <TextBlock Name="desc"/>
            </Label>
        </Grid>
    </Border>
    <UserControl.RenderTransform>
        <TranslateTransform x:Name="tt" X="300"/>
    </UserControl.RenderTransform>
</UserControl>
