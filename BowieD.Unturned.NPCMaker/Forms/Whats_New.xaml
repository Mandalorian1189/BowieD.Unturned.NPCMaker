<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="BowieD.Unturned.NPCMaker.Forms.Whats_New"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.Forms"
        xmlns:xaml="clr-namespace:BowieD.Unturned.NPCMaker.XAML"
        mc:Ignorable="d"
        Title="Whats_New" Height="400" Width="400" WindowStartupLocation="CenterOwner" Icon="{DynamicResource app_Icon}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="10" FontSize="32">
            <TextBlock Name="updateTitle" FontSize="32"/>
        </Label>
        <ScrollViewer Grid.Row="1" Margin="10">
            <Label FontSize="16" Margin="10">
                <TextBlock TextWrapping="Wrap" FontSize="16" Name="updateText" />
            </Label>
        </ScrollViewer>
        <Button Click="MainButton_Click" Name="mainButton" Grid.Row="2" Height="32" FontSize="16" Margin="10"/>
    </Grid>
</mah:MetroWindow>
