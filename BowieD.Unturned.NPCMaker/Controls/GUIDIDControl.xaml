<UserControl x:Class="BowieD.Unturned.NPCMaker.Controls.GUIDIDControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.Controls"
             xmlns:npc="clr-namespace:BowieD.Unturned.NPCMaker.NPC"
             mc:Ignorable="d" x:Name="mainControl">
    <Border x:Name="mainGrid" BorderThickness="1" d:DataContext="{d:DesignInstance Type=npc:GUIDIDBridge}">
        <TextBox x:Name="txt" TextChanged="txt_TextChanged" ContextMenu="{Binding ContextMenu, ElementName=mainControl}"/>
    </Border>
</UserControl>
